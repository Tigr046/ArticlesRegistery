@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group col-6 p-0">
            <label asp-for="Email" class="col-form-label">Введите Email</label><br />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group col-6 p-0">
            <label asp-for="Password" class="col-form-label">Введите пароль</label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group col-6 p-0">
            <label asp-for="ConfirmPassword" class="col-form-label">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group col-6 p-0">
            <label asp-for="FirstName" class="col-form-label">Имя</label><br />
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" />
        </div>
        <div class="form-group col-6 p-0">
            <label asp-for="SecondName" class="col-form-label">Фамилия</label><br />
            <input asp-for="SecondName" class="form-control" />
            <span asp-validation-for="SecondName" />
        </div>
        <div class="form-group col-6 p-0">
            <label asp-for="Patronymic" class="col-form-label">Отчество</label><br />
            <input asp-for="Patronymic" class="form-control" />
            <span asp-validation-for="Patronymic" />
        </div>
        <div class="form-group col-6 p-0">
            <label asp-for="Birthday" class="col-form-label">День рождения</label><br />
            <input type="date" asp-for="Birthday" class="form-control" />
            <span asp-validation-for="Birthday" />
        </div>
        <div class="form-group">
            <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
        </div>
    </div>
</form>