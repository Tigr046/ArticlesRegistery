@model LoginModel
@{
    ViewData["Title"] = "Вход на сайт";
}
<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account" class="btn btn-outline-dark">Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="mt-1 mb-1">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group col-6 p-0">
            <label asp-for="Email" class="col-form-label">Введите Email</label>
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group col-6 p-0">
            <label asp-for="Password" class="col-form-label">Введите пароль</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>