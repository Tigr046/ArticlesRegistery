@model UserRegistryModel


<table class="table table-bordered">
    <thead>
        <tr>
            <td>Email</td>
            <td>Имя</td>
            <td>Фамилия</td>
            <td>Отчество</td>
            <td>День рождения</td>
            <td>Дата создания аккаунта</td>
        </tr>
    </thead>
    <tbody>
        @foreach (UserViewModel user in Model.UserViews)
        {
        <tr class="userRow">
            <td>
                @user.Email
            </td>
            <td>
                @user.FirstName
            </td>
            <td>
                @user.SecondName
            </td>
            <td>
                @user.Patronymic
            </td>
            <td>
                @user.Birthday.ToString("dd.mm.yyyy")
            </td>
            <td>
                @user.CreationDate
            </td>
            <td>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id">Редактировать</a>
            </td>
        </tr>
        }
    </tbody>
</table>

