@model ArticleViewModel

<form asp-controller="Article" asp-action="Create" method="post">
    <div class="form-group col-6 p-0">
        @Html.LabelFor(x => x.Title, new { @class = "col-form-label" })
        @Html.TextAreaFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="form-group col-6 p-0">
        @Html.LabelFor(x => x.Text, new { @class = "col-form-label" })
        @Html.TextAreaFor(x => x.Text, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Text)
    </div>

    <input type="submit" class="btn btn-outline-dark" value="Сохранить статью"/>
</form>


         